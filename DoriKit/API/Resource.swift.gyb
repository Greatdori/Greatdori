@usableFromInline
internal func _resLocale<T>(_ l: DoriAPI.Locale, by d: DoriAPI.LocalizedData<T>, allowsFallback f: Bool) -> String? {
    d.availableInLocale(l) ? l.rawValue : (f ? d.availableLocale(prefer: l)?.rawValue : nil)
}
